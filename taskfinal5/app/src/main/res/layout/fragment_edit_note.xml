<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        tools:context=".UpdateNoteFragment"
        android:background="@drawable/backgg">

        <!-- Updated Edit Note Heading -->
        <TextView
            android:id="@+id/ediththenoteheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="--EDIT NOTE--"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"/>

        <!-- Updated Edit Note Title -->
        <EditText
            android:id="@+id/editNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/ediththenoteheading"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:hint="Enter the title"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp"
            android:background="@drawable/rounded_background" />

        <!-- Updated Edit Note Description -->
        <EditText
            android:id="@+id/ediththenotedescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/editNoteTitle"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background"
            android:fontFamily="sans-serif"
            android:gravity="top"
            android:hint="Enter the description"
            android:padding="12dp"
            android:textSize="18sp"/>

        <!-- Edit Note Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingactiopnbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:backgroundTint="#00BCD4"
            android:tintMode="@color/white"
            android:src="@drawable/done"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="editFab" />

    </RelativeLayout>
</layout>
